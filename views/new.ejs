<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Create New Post</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom Styles -->
  <style>
    .create-post-container {
      max-width: 600px;
      margin: 50px auto;
    }

    .image-preview {
      max-height: 300px;
      object-fit: cover;
      border-radius: 10px;
      margin-top: 15px;
      display: none;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container create-post-container">
    <h2 class="mb-4 text-center">Create a New Post</h2>

    <form action="/posts" method="POST" enctype="multipart/form-data" class="border p-4 shadow rounded bg-white">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="content" class="form-label">Caption</label>
        <textarea name="content" id="content" rows="3" class="form-control" placeholder="Write your caption..." required></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="image" id="image" accept="image/*" class="form-control" onchange="previewImage(event)" />
        <img id="preview" class="image-preview" />
      </div>

      <button type="submit" class="btn btn-primary w-100">Post</button>
    </form>
    <div class="text-center mt-3">
      <a href="/posts" class="btn btn-link">‚Üê Back to All Posts</a>
    </div>
  </div>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Image Preview Script -->
  <script>
    function previewImage(event) {
      const preview = document.getElementById('preview');
      preview.src = URL.createObjectURL(event.target.files[0]);
      preview.style.display = 'block';
    }
  </script>
</body>
</html>
